<% title user_page.title %>

<div class="page-details">
  <div class="provider">
    <%= image_tag user_page.favicon_url, class: 'favicon', width: 16, height: 16 %>
    <span class="name"><%= user_page.provider_name %></span>
  </div>
  <h2 class="title"><%= user_page.title %></h2>
  <div class="details">
    <% if user_page.author_name %>
      <span class="author">By <span class="name"><%= user_page.author_name %></span></span>
    <% end %>

    <% if user_page.published_at %>
      <span class="published-at"><%= user_page.published_at.strftime('%b. %-d, %Y') %></span>
    <% end %>

    <%= link_to 'View Original', user_page.url, class: 'view-original' %>
  </div>
  <% if user_page.watchable? %>
    <div class="media" style="padding-bottom: <%= "#{user_page.media_size_ratio * 100}%" %>">
      <%= user_page.media_html.html_safe %>
    </div>
    <p class="description"><%= user_page.summary %></p>
  <% elsif user_page.content.present? %>
    <div class="content">
      <%= user_page.content.html_safe %>
    </div>
  <% end %>
</div>
