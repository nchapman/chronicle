<!DOCTYPE html>
<html>
  <head>
    <title>Chronicle</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <header>
        <h1>Chronicle</h1>
        <nav>
          <ul>
            <% if current_user %>
              <li><%= link_to 'Home', root_path %></li>
              <li><%= link_to 'Saves', saves_path %></li>
              <li><%= link_to 'Likes', likes_path %></li>
              <li><%= link_to 'History', visits_path %></li>
            <% end %>
          </ul>
        </nav>
        <div class="user">
          <% if current_user %>
            <%= link_to image_tag(current_user.avatar_url), sign_out_path, method: :delete %>
          <% else %>
            <%= link_to 'Sign in', sign_in_path %>
          <% end %>
        </div>
      </header>

      <%= yield %>
    </div>
  </body>
</html>
