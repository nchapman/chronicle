<div class="page-details">
  <div class="provider">
    <%= image_tag page.favicon_url, class: 'favicon', width: 16, height: 16 %>
    <span class="name"><%= page.provider_name %></span>
  </div>
  <h2 class="title"><%= page.title %></h2>
  <div class="details">
    <% if page.author_name %>
      <span class="author">By <span class="name"><%= page.author_name %></span></span>
    <% end %>

    <% if page.published_at %>
      <span class="published-at"><%= page.published_at.strftime('%b. %-d, %Y') %></span>
    <% end %>

    <%= link_to 'View Original', page.url, class: 'view-original' %>
  </div>
  <% if page.watchable? %>
    <p class="description"><%= page.summary %></p>
    <div class="media" style="padding-bottom: <%= "#{page.media_size_ratio * 100}%" %>">
      <%= page.media_html.html_safe %>
    </div>
  <% elsif page.content.present? %>
    <div class="content">
      <%= page.content.html_safe %>
    </div>
  <% end %>
</div>
